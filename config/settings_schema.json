        "info": "Default is previous page"
      },
      {
        "type": "checkbox",
        "id": "show_continue_shopping",
        "label": "Show the \"Continue Shopping\" button",
        "default": false,
        "info": "Cart page only"
      },
      {
        "type": "header",
        "content": "Free shipping message"
