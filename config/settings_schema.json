[
  {
    "name": "theme_info",
    "theme_name": "Palo Alto",
    "theme_author": "Presidio Creative",
    "theme_version": "4.0.1",
    "theme_support_url": "https:\/\/presidiocreative.com\/link\/palo-alto\/contact",
    "theme_documentation_url": "https:\/\/presidiocreative.com\/link\/palo-alto\/docs"
  },
  {
    "name": "Appearance",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "checkbox",
        "id": "show_spacer_lines",
        "label": "Show spacer lines",
        "info": "Spacer lines appear above or below certain titles for emphasis",
        "default": true
      },
      {
        "type": "header",
        "content": "Mobile menu"
      },
      {
        "type": "select",
        "id": "mobile_menu_behaviour",
        "label": "First item in dropdown menu",
        "default": "trigger",
        "options": [
          {
            "label": "Link",
            "value": "link"
          },
          {
            "label": "Link that opens menu",
            "value": "trigger"
          }
        ]
      },
      {
        "type": "header",
        "content": "Pagination"
      },
      {
        "type": "checkbox",
        "id": "enable_infinity_scroll",
        "label": "Enable infinity scroll",
        "default": false,
        "info": "It applies to the Collection, Blog and Search pages"
      },
      {
        "type": "header",
        "content": "Buttons"
      },
      {
        "type": "checkbox",
        "id": "show_buttons_animation",
        "label": "Show animation on hover",
        "default": true
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Style",
        "options": [
          {
            "label": "Square",
            "value": "square"
          },
          {
            "label": "Rounded",
            "value": "rounded"
          },
          {
            "label": "Pill",
            "value": "pill"
          }
        ],
        "default": "square",
        "info": "Affects buttons and form elements"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "color",
        "id": "color_body_bg",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_headings",
        "label": "Headings",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Body text",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#f98cda"
      },
      {
        "type": "color",
        "id": "color_borders_and_lines",
        "label": "Line color",
        "default": "#eee"
      },
      {
        "type": "color",
        "id": "color_custom_badge",
        "label": "Custom badge",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Buttons",
        "info": "Text color automatically sets to black or white based on the button’s background color"
      },
      {
        "type": "paragraph",
        "content": "Primary"
      },
      {
        "type": "color",
        "id": "color_button_primary",
        "label": "Background",
        "default": "#000"
      },
      {
        "type": "paragraph",
        "content": "Secondary"
      },
      {
        "type": "color",
        "id": "color_button_secondary",
        "label": "Background",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "label": "Font",
        "default": "roboto_n5"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Base size",
        "default": 100,
        "min": 85,
        "max": 125,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "header",
        "content": "Body Text"
      },
      {
        "type": "font_picker",
        "id": "type_base_font",
        "label": "Font",
        "default": "roboto_n4"
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Size",
        "default": 100,
        "min": 85,
        "max": 125,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "header",
        "content": "Navigation"
      },
      {
        "type": "select",
        "id": "type_nav_font",
        "label": "Font",
        "default": "body",
        "options": [
          {
            "label": "Body",
            "value": "body"
          },
          {
            "label": "Heading",
            "value": "heading"
          }
        ]
      },
      {
        "type": "range",
        "id": "nav_size",
        "min": 85,
        "max": 125,
        "step": 5,
        "unit": "%",
        "label": "Base size",
        "default": 100
      },
      {
        "type": "checkbox",
        "id": "nav_caps",
        "label": "Capitalize",
        "info": "Disabled on Hamburger menu",
        "default": false
      },
      {
        "type": "header",
        "content": "Buttons"
      },
      {
        "type": "select",
        "id": "type_button_font",
        "label": "Font",
        "default": "body",
        "options": [
          {
            "label": "Body",
            "value": "body"
          },
          {
            "label": "Heading",
            "value": "heading"
          }
        ]
      },
      {
        "type": "range",
        "id": "button_size",
        "min": 85,
        "max": 125,
        "step": 5,
        "unit": "%",
        "label": "Base size",
        "default": 100
      },
      {
        "type": "checkbox",
        "id": "button_caps",
        "label": "Capitalize",
        "default": false
      }
    ]
  },
  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product grid layout"
      },
      {
        "type": "range",
        "id": "products_per_row_on_desktop",
        "label": "Products per row on desktop",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "select",
        "id": "products_per_row_on_mobile",
        "label": "Products per row on mobile",
        "info": "Grid layout only",
        "default": "1",
        "options": [
          {
            "label": "1",
            "value": "1"
          },
          {
            "label": "2",
            "value": "2"
          }
        ]
      },
      {
        "type": "header",
        "content": "Product grid appearence"
      },
      {
        "type": "select",
        "id": "image_size",
        "label": "Image size",
        "default": "cover",
        "options": [
          {
            "label": "Stretch",
            "value": "cover"
          },
          {
            "label": "Fit",
            "value": "contain"
          }
        ]
      },
      {
        "type": "range",
        "id": "image_aspect_ratio",
        "label": "Aspect ratio",
        "min": 0.5,
        "max": 1.5,
        "step": 0.1,
        "unit": ":1",
        "default": 1
      },
      {
        "type": "checkbox",
        "id": "product_grid_hover_image",
        "label": "Show second product image on hover",
        "info": "Desktop only",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_grid_slideshow",
        "label": "Enable product images slideshow",
        "info": "Desktop only",
        "default": false
      },
      {
        "type": "select",
        "id": "product_grid_slideshow_arrows",
        "label": "Slideshow arrows",
        "default": "black",
        "options": [
          {
            "value": "black",
            "label": "Dark"
          },
          {
            "value": "white",
            "label": "Light"
          }
        ]
      },
      {
        "type": "header",
        "content": "Reviews"
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "label": "Show review stars",
        "info": "Install Shopify's free [Product Reviews app](https:\/\/apps.shopify.com\/product-reviews) before enabling this option.",
        "default": true
      },
      {
        "type": "header",
        "content": "Badge"
      },
      {
        "type": "checkbox",
        "id": "show_badge",
        "label": "Show badge",
        "default": true
      },
      {
        "type": "select",
        "id": "product_badge_style",
        "label": "Badge style",
        "default": "circle",
        "options": [
          {
            "value": "circle",
            "label": "Circle"
          },
          {
            "value": "rectangle",
            "label": "Rectangle"
          }
        ]
      },
      {
        "type": "header",
        "content": "Product form"
      },
      {
        "type": "checkbox",
        "id": "show_quantity",
        "label": "Show quantity",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_variant_boxes",
        "label": "Show variants as boxes",
        "default": false
      },
      {
        "type": "header",
        "content": "Color swatches",
        "info": "Set up your product color variant options. [Learn more](https:\/\/presidiocreative.com\/link\/palo-alto\/swatches)"
      },
      {
        "type": "checkbox",
        "id": "enable_color_swatches",
        "label": "Enable color swatches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_grid_hover_swatches",
        "label": "Show on hover",
        "info": "Desktop only",
        "default": false
      },
      {
        "type": "header",
        "content": "Quick view"
      },
      {
        "type": "checkbox",
        "id": "show_payment_button",
        "label": "Show dynamic checkout button in Quick View",
        "info": "Lets customers check out directly using a familiar payment method. [Learn more](https:\/\/help.shopify.com\/manual\/using-themes\/change-the-layout\/dynamic-checkout)",
        "default": true
      },
      {
        "type": "select",
        "id": "quick_button",
        "label": "Quick button",
        "info": "For desktop only",
        "default": "view",
        "options": [
          {
            "label": "Quick view",
            "value": "view"
          },
          {
            "label": "Quick buy",
            "value": "buy"
          },
          {
            "label": "None",
            "value": "none"
          }
        ]
      },
      {
        "type": "header",
        "content": "Newsletter"
      },
      {
        "type": "checkbox",
        "id": "show_newsletter",
        "label": "Show newsletter if out of stock",
        "default": true
      },
      {
        "type": "richtext",
        "id": "text_newsletter",
        "label": "Text",
        "default": "<p>Notify me when this product is available:<\/p>"
      },
      {
        "type": "header",
        "content": "Styles"
      },
      {
        "type": "header",
        "content": "Media",
        "info": "Learn more about [media types](https:\/\/help.shopify.com\/manual\/products\/product-media)"
      },
      {
        "type": "checkbox",
        "id": "enable_video_looping",
        "label": "Enable video looping",
        "default": false
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
